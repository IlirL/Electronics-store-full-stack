{
  "name": "backend",
  "version": "0.0.1",
  "description": "TypeScript + Sequelize + Postgres + Express API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start:dev": "docker-compose --env-file .env up -d  && cross-env NODE_ENV=development nodemon",
    "start:local": "cross-env NODE_ENV=local nodemon",
    "start:test": "cross-env NODE_ENV=test nodemon",
    "build": "set NODE_OPTIONS=--max_old_space_size=2048 && tsc --project tsconfig.json && tsconfig-replace-paths -v --project tsconfig.json -s ./src -o ./build",
    "test:local": "cross-env NODE_ENV=local jest --forceExit --detectOpenHandles  --testPathPattern=src/tests",
    "test:dev": "cross-env NODE_ENV=development jest --forceExit --detectOpenHandles --watchAll --testPathPattern=src/tests",
    "test:ci": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles  --testPathPattern=src/tests",
    "test:spec": "cross-env NODE_ENV=local jest --forceExit --detectOpenHandles --watchAll -- src/tests/util.test.ts",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "lint:fix": "npm run lint -- --fix",
    "db:migrate:one": "npx sequelize-cli db:migrate --name=$1",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo --name=$1",
    "db:migrate:undo:all": "npx sequelize-cli db:migrate:undo:all",
    "db:make:migrations": "./node_modules/sequelize-auto-migrations/bin/makemigration.js",
    "db:seed:all": "npx sequelize db:seed:all",
    "db:seed:undo:all": "npx sequelize db:seed:undo:all",
    "prepare": "husky install",
    "tt": "ts-node -r tsconfig-replace-paths/register src/server.ts"
  },
  "engines": {
    "node": ">=14.16.0"
  },
  "jest": {
    "testTimeout": 9000,
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "test_reports",
    "outputName": "jest-junit.xml"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.341.0",
    "axios": "^1.3.4",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "bull": "^4.10.4",
    "bullmq": "^3.10.1",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.14.0",
    "class-validator-jsonschema": "^5.0.0",
    "cls-hooked": "^4.2.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.0.0",
    "deep-diff": "^1.0.2",
    "diff": "^5.1.0",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "faker": "^6.6.6",
    "firebase-admin": "^11.5.0",
    "helmet": "^6.0.1",
    "hpp": "^0.2.3",
    "http-proxy-middleware": "^2.0.6",
    "jest": "^29.5.0",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.2",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "phone": "^3.1.36",
    "puppeteer": "^20.4.0",
    "redis": "^4.6.5",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "response-time": "^2.3.2",
    "sequelize": "^6.29.3",
    "sequelize-cli": "^6.6.0",
    "supertest": "^6.3.3",
    "swagger-ui-express": "^4.6.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "uuid-parse": "^1.1.0",
    "uuidv4": "^6.2.13",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-loki": "^6.0.6"
  },
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.3",
    "@types/sequelize": "^4.28.14",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "node-gyp": "^9.3.1",
    "nodemon": "^2.0.21",
    "prettier": "^2.8.5",
    "sequelize-auto": "^0.8.8",
    "tsconfig-paths": "^4.1.2",
    "tsconfig-replace-paths": "^0.0.14"
  }
}
